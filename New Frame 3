    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            int age = Integer.parseInt(jTextField1.getText());
            if (age < 18) {
                JOptionPane.showMessageDialog(this, "Sorry, this action is invalid for users aged 17 or below.",
                    "Invalid Action", JOptionPane.ERROR_MESSAGE);
                dispose();
                System.exit(0);
            } else {
                JOptionPane.showMessageDialog(this, "Congratulations! You are eligible to proceed.",
                    "Valid Action", JOptionPane.INFORMATION_MESSAGE);
                jButton1.setEnabled(false); // Disable the button during loading
                new Thread(new Runnable() {
                    @Override
                    public void run() {
                        simulateLoading(); // Start the loading process
                        jButton1.setEnabled(true); // Re-enable the button after loading
                    }

                    private void simulateLoading() {
                        throw new UnsupportedOperationException("Not supported yet."); // Generated from nbfs://nbhost/SystemFileSystem/Templates/Classes/Code/GeneratedMethodBody
                    }
                }).start();
            }
            for (int i = 0; i <= 100; i++) {
                try {
                    Thread.sleep(10); // Simulate some loading time
                } catch (InterruptedException ex) {
                }
                final int progress = i;
                SwingUtilities.invokeLater(() -> {
                    jProgressBar1.setValue(progress); // Update the progress bar
                    jTextField1.setText("Loading... " + progress + "%"); // Update status
                });
            }
            jTextField1.setText(" Loading Complete!"); // Update status after loading completes
            NewJFrame4 newFrame = new NewJFrame4();
            newFrame.setVisible(true);
        } catch (NumberFormatException ex) {
            JOptionPane.showMessageDialog(this, "Please enter a valid age.", "Invalid Age", JOptionPane.ERROR_MESSAGE);
        }
    }                                        

